<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Semay Chat</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(MARKETING_VERSION)</string>
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>bitchat</string>
				<string>semay</string>
			</array>
		</dict>
	</array>
	<key>CFBundleVersion</key>
	<string>$(CURRENT_PROJECT_VERSION)</string>
	<key>SemayPrivacyPolicyURL</key>
	<string>https://github.com/1KEBRON/semaychat/blob/main/docs/privacy-policy.md</string>
	<key>SemayTermsOfUseURL</key>
	<string>https://github.com/1KEBRON/semaychat/blob/main/docs/terms-of-use.md</string>
	<key>SemayModerationPolicyURL</key>
	<string>https://github.com/1KEBRON/semaychat/blob/main/docs/community-moderation.md</string>
	<key>SemaySupportEmail</key>
	<string>support@semay.app</string>
	<key>SemaySupportURL</key>
	<string>https://github.com/1KEBRON/semaychat/issues</string>
	<key>SemayAppGroupIdentifier</key>
	<string>$(SEMAY_APP_GROUP_IDENTIFIER)</string>
	<key>LSMinimumSystemVersion</key>
	<string>$(MACOSX_DEPLOYMENT_TARGET)</string>
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>Semay uses Bluetooth to create a secure mesh network for chatting with nearby users.</string>
	<key>NSBluetoothPeripheralUsageDescription</key>
	<string>Semay uses Bluetooth to discover and connect with nearby users.</string>
	<key>NSCameraUsageDescription</key>
	<string>Semay uses the camera to scan QR codes to connect securely.</string>
	<key>NSPhotoLibraryUsageDescription</key>
	<string>Semay lets you add photos as local business evidence. Photo location is only used if you explicitly confirm it.</string>
	<key>NSMicrophoneUsageDescription</key>
	<string>Semay uses the microphone to record voice notes that can relay across the mesh.</string>
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Semay uses location for nearby maps and local service discovery. Exact location from photos is only used when you explicitly confirm it.</string>
	<key>UIBackgroundModes</key>
	<array>
		<string>bluetooth-central</string>
		<string>bluetooth-peripheral</string>
	</array>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIRequiresFullScreen</key>
	<true/>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
	</array>
</dict>
</plist>
